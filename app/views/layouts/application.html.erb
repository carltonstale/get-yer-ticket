<!DOCTYPE html>
<html>
  <head>
    <title>GetYerTicket</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if logged_in? %>
  <%= button_to "Today", today_path, method: :get%>
  <%= button_to "Week View", calendars_week_path, method: :get %>
  <%= button_to "Month View", calendars_month_path, method: :get %>
<% end %>
  <% flash.each do |k, v| %>
            <div><%= v %></div>
        <% end %>
    <%= yield %>
    <br>
      <% if session[:user_id] %>
          <%= button_to "Log Out", logout_path, method: :get %>
        <% else %>
          <%= button_to "Log In", login_path, method: :get %>
      <% end %>
  </body>
</html>

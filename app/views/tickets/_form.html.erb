<%= form_with(model: ticket, local: true) do |f| %>
    <%= f.collection_select :bike, @customer.bikes, :id, :make %>
    <%= f.label :check_in %>
    <%= f.datetime_local_field :check_in %>
    <%= f.label :work_start %>
    <%= f.datetime_local_field :work_start %>
    <%= f.label :due %>
    <%= f.datetime_local_field :due %>
    <%= f.label :status %>
    <%= f.select(:status, [['Open'], ['In Progress'], ['Paused/Awaiting Approval'], ['Complete']]) %>
    <%= f.label :labor %>
    <%= f.text_field :labor %>
    <%= f.label :labor_cost %>
    <%= f.number_field :labor_cost %>
    <%= f.label :parts %>
    <%= f.text_field :parts %>
    <%= f.label :parts_cost %>
    <%= f.number_field :parts_cost %>
    <%= f.label :paid? %>
    <%= f.check_box :paid? %>
    <%= f.hidden_field(@customer.id = :customer_id) %>
    <%= f.submit %>
<% end %>
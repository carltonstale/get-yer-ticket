<h3>CRM</h3>
<%= form_with model: ticket, local: true, do |f| %>
<%= label_tag "Customer Name: " %>
<%= f.text_field :name %> <br>

<%= label_tag "Phone Number: " %>
<%= telephone_field_tag :phone_number %> <br>

<%= label_tag "Email: " %>
<%= email_field_tag :email %>

    <%= f.text_field :make, placeholder: "Make" %>
    <%= f.text_field :model_series, placeholder: "Model/Series" %>
    <%= f.text_field :color, placeholder: "Color" %>
    <%= f.text_field :size, placeholder: "Size" %>
<%= f.label :check_in %>
    <%= f.datetime_local_field :check_in %>
    <%= f.label :work_start %>
    <%= f.datetime_local_field :work_start %>
    <%= f.label :due %>
    <%= f.datetime_local_field :due %>
    <%= f.label :status %>
    <%= f.select(:status, [['Open'], ['InProgress'], ['Paused/AwaitingApproval'], ['Complete']]) %>
    <%= f.label :labor %>
    <%= f.text_field :labor %>
    <%= f.label :labor_cost %>
    <%= f.number_field :labor_cost %>
    <%= f.label :parts %>
    <%= f.text_field :parts %>
    <%= f.label :parts_cost %>
    <%= f.number_field :parts_cost %>
    <%= f.label :paid? %>
    <%= f.check_box :paid? %>
    <%= f.submit%>
<% end %>

<%= form_with model: ticket, local: true do |f| %>
    
    <%= f.fields_for :customers do |c| %>
        <%= c.label :name %>
        <%= c.text_field :name %>
        
        <%= c.label :phone_number %>
        <%= c.telephone_field :phone_number %>

        <%= c.label :email %>
        <%= c.email_field :email %>
    <% end %>
    <br><br>
    <%= f.fields_for :bikes do |b| %>
        <%= b.text_field :make, placeholder: "Make" %>
        <%= b.text_field :model_series, placeholder: "Model/Series" %>
        <%= b.text_field :color, placeholder: "Color" %>
        <%= b.text_field :size, placeholder: "Size" %>
    <% end %>
    
    
    
<%= f.label :check_in %>
    <%= f.datetime_local_field :check_in %>
    <%= f.label :work_start %>
    <%= f.datetime_local_field :work_start %>
    <%= f.label :due %>
    <%= f.datetime_local_field :due %>
    <%= f.label :status %>
    <%= f.select(:status, [['Open'], ['InProgress'], ['Paused/AwaitingApproval'], ['Complete']]) %>
    <%= f.label :labor %>
    <%= f.text_field :labor %>
    <%= f.label :labor_cost %>
    <%= f.number_field :labor_cost %>
    <%= f.label :parts %>
    <%= f.text_field :parts %>
    <%= f.label :parts_cost %>
    <%= f.number_field :parts_cost %>
    <%= f.label :paid? %>
    <%= f.check_box :paid? %>
    <%= f.submit%>
<% end %>

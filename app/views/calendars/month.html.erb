<%= month_calendar do |date, ticket| %>
    <%= date %>
    <%= link_to "New Ticket", new_ticket_path(:date => date.to_s) if !date.past?%>
    <br>
    <% @tickets.each do |t|%>
        <% if t.valid? %>
            <% if t.due.to_date == date.to_date %>
                <%= link_to "#{t.id}: #{t.customer.name}", ticket_path(t) %>          
            <% end %>
        <% end %>
    <% end %>
<% end %>
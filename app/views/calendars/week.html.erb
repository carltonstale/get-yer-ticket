<%= week_calendar do |date| %>
    <%= date %>
    <%= link_to "New Ticket", new_ticket_path(:date => date) if !date.past? %>
    <br>
    <% @tickets.each do |t|%>
        <% if t.valid? %>
            <% if t.due.day == date.day %>
                <%= link_to "#{t.id}: #{t.customer.name}", ticket_path(t) %>          
            <% end %>
        <% end %>
    <% end %>
<% end %>